{
    "version": 2,
    "name": "meri-shikayat-dev",
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "server/src/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/src/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "build": {
        "env": {
            "NODE_ENV": "development"
        }
    }
}