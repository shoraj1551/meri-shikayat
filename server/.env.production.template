# Environment Variables Configuration
# Production-ready environment template

# ============================================
# CRITICAL: DO NOT COMMIT THIS FILE WITH REAL VALUES
# Copy to .env and fill with actual values
# ============================================

# Server Configuration
NODE_ENV=production
PORT=5000
HOSTNAME=api.merishikayat.com

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/meri-shikayat?retryWrites=true&w=majority

# Redis
REDIS_HOST=redis-cluster.example.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_TLS=true

# JWT Configuration
JWT_SECRET=generate-with-openssl-rand-hex-64
JWT_SECRET_PREVIOUS=for-key-rotation
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# Session
SESSION_SECRET=generate-with-openssl-rand-hex-64

# CORS
CORS_ORIGIN=https://merishikayat.com,https://www.merishikayat.com

# File Upload
MAX_FILE_SIZE=20971520
UPLOAD_PATH=./uploads

# External Services
FAST2SMS_API_KEY=your-fast2sms-api-key
EMAIL_SERVICE=gmail
EMAIL_USER=noreply@merishikayat.com
EMAIL_PASSWORD=your-email-app-password

# ML Service
ML_SERVICE_URL=http://ml-service:8000
ML_SERVICE_ENABLED=true

# Observability
DD_ENABLED=true
DD_API_KEY=your-datadog-api-key
DD_SERVICE=meri-shikayat-api
DD_AGENT_HOST=datadog-agent

CLOUDWATCH_ENABLED=true
CLOUDWATCH_LOG_GROUP=/meri-shikayat/api
AWS_REGION=ap-south-1

PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENABLED=true

# Performance
CDN_ENABLED=true
CDN_BASE_URL=https://cdn.merishikayat.com
CDN_PROVIDER=cloudflare

# Feature Flags
FEATURE_2FA=true
FEATURE_SOCIAL_AUTH=false
FEATURE_ML_CATEGORIZATION=true
FEATURE_AUTO_ASSIGNMENT=true
FEATURE_CACHING=true

# Security
API_SIGNING_SECRET=generate-with-openssl-rand-hex-64

# Tracing
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
