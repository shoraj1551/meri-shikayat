# Server Configuration
PORT=5000
NODE_ENV=development

# Database - MongoDB Atlas (Cloud Database)
# Replace <username>, <password>, and <cluster-url> with your MongoDB Atlas credentials
# Get your connection string from: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/meri-shikayat?retryWrites=true&w=majority

# For local MongoDB (if you install it later), use:
# MONGODB_URI=mongodb://localhost:27017/meri-shikayat

# JWT Secret - CRITICAL SECURITY SETTING
# IMPORTANT: Generate a secure random string for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# NEVER use the default value below in production!
JWT_SECRET=meri-shikayat-secret-key-change-this-in-production-2024
JWT_EXPIRE=7d

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS - Allowed Origins (comma-separated for multiple origins)
# Production example: CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=debug

# Cloud Storage (Optional)
CLOUD_STORAGE_BUCKET=
CLOUD_STORAGE_KEY=
CLOUD_STORAGE_SECRET=

# SMS Configuration (Fast2SMS)
# Get API key from: https://www.fast2sms.com/
FAST2SMS_API_KEY=your_fast2sms_api_key_here
FAST2SMS_SENDER_ID=MSHKYT

# Email Configuration (Gmail)
# Use App Password for Gmail: https://support.google.com/accounts/answer/185833
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# OTP Configuration
OTP_EXPIRY_MINUTES=5
MAX_OTP_ATTEMPTS=5
OTP_RATE_LIMIT_MINUTES=2

# ML Service Configuration
ML_SERVICE_URL=http://localhost:8000
ML_SERVICE_ENABLED=true
